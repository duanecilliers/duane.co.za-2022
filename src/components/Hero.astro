---
import Socials from '@/components/Socials';
import { getContributions } from '@/modules/github/contributions';

import ContributionsCanvas from './ContributionsCanvas';

const ghUsername = import.meta.env.GITHUB_USERNAME;
const ghToken = import.meta.env.GITHUB_ACCESS_TOKEN;
const contributions = await getContributions(ghToken, ghUsername);
---

<div>
  <div class="hero min-h-screen min-w-screen">
    <ContributionsCanvas client:only contributions={contributions} />
    <div class="hero-content">
      <div class="max-w-2xl">
        <h1 class="text-3xl md:text-6xl font-bold font-primary">
          <span class="text-xl md:text-2xl mb-2 block">
            Duane Cilliers
          </span>
          Frontend Developer Based in Cape Town.
        </h1>
        <p class="py-6 leading-7 text-white text-sm md:text-xl">
          Currently working at{' '}
          <a
            class="link font-bold"
            href="https://reos.co.za/"
            target="_blank"
            rel="noreferrer"
          >
            reOS
          </a>
          &nbsp;and&nbsp;
          <a
            class="link font-bold"
            href="https://trustprotects.me/"
            target="_blank"
            rel="noreferrer"
          >
            Trust My Travel
          </a>
          . Exploring advanced TypeScript, creative development and
          experimenting with the latest tech. This is where I&apos;ll be
          planting the seeds for my{' '}
          <a
            class="link font-bold"
            href="https://maggieappleton.com/garden-history"
            target="_blank"
            rel="noreferrer"
          >
            Digital Garden
          </a>
          .
        </p>
        <Socials />
      </div>
    </div>
  </div>
</div>